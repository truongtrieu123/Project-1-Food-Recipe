                                <TextBlock Text="Bước" FontWeight="Bold" FontSize="30" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock  FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" >
                                <Run Text="2" Foreground="Blue"></Run>
