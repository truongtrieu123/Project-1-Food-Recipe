                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListViewItem Width="100" Height="100">
                            <Rectangle RadiusX="20" RadiusY="20"  Height="90" Width="90">
                                <Rectangle.Fill>
