            <ListView  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="1198">
                <ListViewItem HorizontalAlignment="Center">
                    <StackPanel Width="520" >
                        <StackPanel Orientation="Horizontal" Width="500">
                            <StackPanel Width="90" Height="100" VerticalAlignment="Top" Margin="0,10,0,10" Background="LightGreen">
